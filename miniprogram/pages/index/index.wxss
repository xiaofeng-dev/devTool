/**index.wxss**/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 标签页样式 */
.tabs {
  display: flex;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 16px 0;
  font-size: 16px;
  color: #666;
  position: relative;
}

.tab.active {
  color: #D33A31;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 2px;
  background-color: #D33A31;
  border-radius: 1px;
}

/* 搜索框样式 */
.search-bar {
  padding: 10px 15px;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: #f2f2f2;
  border-radius: 16px;
  padding: 8px 12px;
}

.search-input icon {
  margin-right: 6px;
}

.search-input input {
  flex: 1;
  height: 18px;
  font-size: 14px;
}

/* 内容区域 */
.content-area {
  flex: 1;
  overflow: hidden;
  position: relative;
}

/* 音乐列表样式 */
.music-list {
  background-color: #fff;
  height: calc(100vh - 120px); /* 调整高度，移除分页控件后的高度 */
  box-sizing: border-box;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 10px 15px;
  border-bottom: 1px solid #eee;
  background-color: #fff;
  height: 70px; /* 固定高度 */
  box-sizing: border-box;
}

.item-cover {
  width: 50px;
  height: 50px;
  margin-right: 12px;
  background-color: #f2f2f2;
  border-radius: 4px;
  overflow: hidden;
}

.item-cover image {
  width: 100%;
  height: 100%;
}

.cover-placeholder {
  width: 100%;
  height: 100%;
  background-color: #eee;
  display: flex;
  align-items: center;
  justify-content: center;
}

.list-item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

.item-title {
  font-size: 15px;
  font-weight: bold;
  color: #333;
  margin-bottom: 2px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-subtitle {
  font-size: 13px;
  color: #666;
  margin-bottom: 2px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-date {
  font-size: 11px;
  color: #999;
}

.item-completed {
  margin-right: 10px;
}

.item-arrow {
  color: #ccc;
  font-size: 16px;
  margin-left: 10px;
}

/* 空列表提示 */
.empty-tip {
  text-align: center;
  padding: 30px;
  color: #999;
  font-size: 14px;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

/* 回顶部按钮 */
.back-to-top {
  position: fixed;
  right: 20px;
  bottom: 80px;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background-color: rgba(211, 58, 49, 0.8);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  z-index: 100;
  font-weight: bold;
}

.back-to-top-icon {
  font-size: 18px;
}

/* 加载提示 */
.loading-tip {
  text-align: center;
  padding: 30px;
  color: #666;
  font-size: 14px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-icon {
  width: 24px;
  height: 24px;
  margin-bottom: 10px;
  border: 2px solid #D33A31;
  border-radius: 50%;
  border-top-color: transparent;
  animation: loading-rotate 1s linear infinite;
}

@keyframes loading-rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 添加自定义分享按钮样式 */
.custom-share-btn {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  background-color: #D33A31;
  color: white;
  padding: 15rpx 30rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  z-index: 999;
}

.share-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.custom-share-btn text {
  font-size: 28rpx;
}
