<!--login.wxml-->
<view class="container">
  <view class="login-header">
    <view class="logo-container">
      <text class="logo-text">音</text>
    </view>
    <view class="title">音乐查找助手</view>
    <view class="subtitle">欢迎回来，请登录您的账号</view>
  </view>
  
  <view class="login-card">
    <view class="input-group">
      <view class="input-wrapper">
        <svg class="input-icon" viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg" width="24" height="24">
          <path d="M512 554.666667c-117.333333 0-213.333333-96-213.333333-213.333334s96-213.333333 213.333333-213.333333 213.333333 96 213.333333 213.333333-96 213.333333-213.333333 213.333334z m0-384c-93.866667 0-170.666667 76.8-170.666667 170.666666s76.8 170.666667 170.666667 170.666667 170.666667-76.8 170.666667-170.666667-76.8-170.666667-170.666667-170.666666z" fill="#999999"></path>
          <path d="M810.666667 853.333333c-12.8 0-21.333333-8.533333-21.333333-21.333333 0-153.6-125.866667-277.333333-277.333333-277.333333s-277.333333 123.733333-277.333333 277.333333c0 12.8-8.533333 21.333333-21.333334 21.333333s-21.333333-8.533333-21.333333-21.333333c0-177.066667 142.933333-320 320-320s320 142.933333 320 320c0 12.8-8.533333 21.333333-21.333333 21.333333z" fill="#999999"></path>
        </svg>
        <input class="input-field" type="text" placeholder="请输入用户名" bindinput="onUsernameInput" value="{{username}}" />
      </view>
    </view>
    
    <view class="input-group">
      <view class="input-wrapper">
        <svg class="input-icon" viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg" width="24" height="24">
          <path d="M800 416h-32v-80c0-160-128-288-288-288S192 176 192 336v80h-32c-32 0-32 32-32 32v448c0 32 32 32 32 32h640c32 0 32-32 32-32V448c0-32-32-32-32-32z m-544-80c0-123.712 100.288-224 224-224s224 100.288 224 224v80H256v-80z m512 544H192V448h576v432z" fill="#999999"></path>
          <path d="M512 704c35.392 0 64-28.608 64-64 0-35.392-28.608-64-64-64-35.392 0-64 28.608-64 64 0 35.392 28.608 64 64 64z" fill="#999999"></path>
        </svg>
        <input class="input-field" password placeholder="请输入密码" bindinput="onPasswordInput" value="{{password}}" />
      </view>
    </view>
    
    <view class="error-container" wx:if="{{errorMsg}}">
      <view class="error-message">
        <svg class="error-icon" viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg" width="16" height="16">
          <path d="M512 64C264.6 64 64 264.6 64 512s200.6 448 448 448 448-200.6 448-448S759.4 64 512 64z m165.4 618.2l-66.5 66.5c-3.1 3.1-8.2 3.1-11.3 0L512 661.3l-87.6 87.6c-3.1 3.1-8.2 3.1-11.3 0l-66.5-66.5c-3.1-3.1-3.1-8.2 0-11.3l87.6-87.6-87.6-87.6c-3.1-3.1-3.1-8.2 0-11.3l66.5-66.5c3.1-3.1 8.2-3.1 11.3 0l87.6 87.6 87.6-87.6c3.1-3.1 8.2-3.1 11.3 0l66.5 66.5c3.1 3.1 3.1 8.2 0 11.3L579.3 512l87.6 87.6c3.2 3.1 3.2 8.1 0.1 11.2z" fill="#D33A31"></path>
        </svg>
        <text>{{errorMsg}}</text>
      </view>
    </view>
    
    <button class="login-btn" hover-class="login-btn-hover" bindtap="login" loading="{{loading}}">
      <view class="btn-content" wx:if="{{!loading}}">
        <svg class="btn-icon" viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg" width="20" height="20">
          <path d="M853.333333 501.333333c0-12.8-8.533333-21.333333-21.333333-21.333333H490.666667V128c0-12.8-8.533333-21.333333-21.333334-21.333333s-21.333333 8.533333-21.333333 21.333333v373.333333c0 12.8 8.533333 21.333333 21.333333 21.333334h384c12.8 0 21.333333-8.533333 21.333334-21.333334 0-6.4 0-6.4 0 0zM512 917.333333C276.053333 917.333333 85.333333 726.613333 85.333333 490.666667S276.053333 64 512 64c100.266667 0 192.853333 34.133333 268.8 93.866667 8.533333 8.533333 8.533333 21.333333 0 29.866666s-21.333333 8.533333-29.866667 0C680.96 134.826667 599.04 106.666667 512 106.666667 298.666667 106.666667 128 277.333333 128 490.666667S298.666667 874.666667 512 874.666667s384-170.666667 384-384c0-12.8 8.533333-21.333333 21.333333-21.333334s21.333333 8.533333 21.333334 21.333334c0 235.946667-192 426.666667-426.666667 426.666666z" fill="#FFFFFF"></path>
        </svg>
        <text>登录</text>
      </view>
    </button>
  </view>
  
  <view class="bottom-tips">
    <text class="tip-text">登录即可享受更多精彩功能</text>
  </view>

  <!-- 底部装饰 -->
  <view class="wave-wrapper"></view>
</view> 