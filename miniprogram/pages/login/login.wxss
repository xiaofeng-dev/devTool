/* login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  height: 100vh;
  background-color: #f8f8f8;
  position: relative;
  overflow: hidden;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
  margin-bottom: 60rpx;
  width: 100%;
  z-index: 1;
}

.logo-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  width: 140rpx;
  height: 140rpx;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0 8rpx 20rpx rgba(211, 58, 49, 0.15);
  overflow: hidden;
}

.logo-text {
  font-size: 80rpx;
  font-weight: bold;
  color: #D33A31;
  line-height: 1;
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
}

.logo-svg {
  width: 90rpx;
  height: 90rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.login-card {
  width: 85%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.06);
  z-index: 1;
}

.input-group {
  margin-bottom: 40rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 16rpx;
  transition: border-color 0.3s;
}

.input-wrapper:focus-within {
  border-color: #D33A31;
}

.input-icon {
  width: 24px;
  height: 24px;
  margin-right: 20rpx;
}

.input-field {
  flex: 1;
  height: 80rpx;
  font-size: 32rpx;
  color: #333;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #FF5349, #D33A31);
  color: #fff;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 20rpx rgba(211, 58, 49, 0.2);
}

.login-btn-hover {
  opacity: 0.9;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon {
  margin-right: 10rpx;
}

.error-container {
  margin-top: 20rpx;
}

.error-message {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #D33A31;
  font-size: 24rpx;
  text-align: center;
}

.error-icon {
  margin-right: 8rpx;
}

.bottom-tips {
  position: absolute;
  bottom: 60rpx;
  width: 100%;
  text-align: center;
  z-index: 1;
}

.tip-text {
  font-size: 26rpx;
  color: #999;
}

/* 底部装饰 */
.wave-wrapper {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: rgba(211, 58, 49, 0.05);
} 