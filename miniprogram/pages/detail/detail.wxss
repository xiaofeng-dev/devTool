.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
  position: relative;
}

/* 返回导航 */
.back-nav {
  position: fixed;
  top: 0;
  left: 0;
  padding: 16px;
  z-index: 100;
  display: flex;
  align-items: center;
  background-color: rgba(255,255,255,0.9);
  border-radius: 30px;
  margin: 10px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.back-arrow {
  font-size: 20px;
  margin-right: 4px;
}

.back-text {
  font-size: 14px;
}

/* 加载中状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  padding: 30px;
}

.loading-icon {
  width: 40px;
  height: 40px;
  border: 3px solid #D33A31;
  border-radius: 50%;
  border-top-color: transparent;
  animation: loading-rotate 1s linear infinite;
  margin-bottom: 20px;
}

.loading-text {
  font-size: 16px;
  color: #666;
}

@keyframes loading-rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 音乐详情 */
.music-detail {
  display: flex;
  flex-direction: column;
  padding: 15px;
}

.detail-header {
  display: flex;
  padding: 15px;
  background-color: #fff;
  border-radius: 10px;
  margin-bottom: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.item-cover {
  width: 100px;
  height: 100px;
  border-radius: 8px;
  overflow: hidden;
  margin-right: 15px;
  background-color: #eee;
}

.item-cover image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cover-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 14px;
  background-color: #f5f5f5;
}

.edit-cover {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  font-size: 12px;
  text-align: center;
  padding: 4px 0;
}

.upload-icon {
  font-size: 24px;
  margin-bottom: 5px;
}

.upload-text {
  font-size: 12px;
}

.item-field-edit {
  width: 100%;
}

.field-row {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.field-label {
  width: 50px;
  font-size: 14px;
  color: #666;
}

.field-input {
  flex: 1;
  border: 1px solid #eee;
  border-radius: 4px;
  padding: 4px 8px;
  font-size: 14px;
}

.priority-tag {
  display: inline-block;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 12px;
}

.priority-urgent {
  background-color: #fff1f0;
  color: #f5222d;
}

.priority-important {
  background-color: #fff7e6;
  color: #fa8c16;
}

.priority-normal {
  background-color: #f6ffed;
  color: #52c41a;
}

.picker {
  display: flex;
  align-items: center;
}

.remark-textarea {
  width: 100%;
  height: 100px;
  border: 1px solid #eee;
  border-radius: 4px;
  padding: 8px;
  font-size: 14px;
  box-sizing: border-box;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 6px;
}

.item-subtitle {
  font-size: 14px;
  color: #666;
  margin-bottom: 6px;
}

.item-album {
  font-size: 13px;
  color: #999;
  margin-bottom: 8px;
}

.item-status {
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 12px;
  width: fit-content;
}

.item-status.completed {
  background-color: #e6f7e6;
  color: #52c41a;
}

.item-status.incomplete {
  background-color: #fff7e6;
  color: #fa8c16;
}

/* 详情区块 */
.detail-section {
  background-color: #fff;
  border-radius: 10px;
  margin-bottom: 15px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  padding: 15px;
  border-bottom: 1px solid #f0f0f0;
  color: #333;
}

.section-content {
  padding: 0 15px;
}

.info-item {
  display: flex;
  padding: 12px 0;
  border-bottom: 1px solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  width: 80px;
  color: #666;
  font-size: 14px;
}

.info-value {
  flex: 1;
  color: #333;
  font-size: 14px;
}

.notes {
  padding: 12px 0;
  color: #333;
  font-size: 14px;
  line-height: 1.6;
}

.download-url {
  padding: 12px 0;
  word-break: break-all;
  color: #1890ff;
  font-size: 14px;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 70vh;
  padding: 30px;
}

.empty-text {
  margin-top: 20px;
  font-size: 16px;
  color: #666;
  margin-bottom: 30px;
}

.back-btn {
  padding: 10px 20px;
  background-color: #D33A31;
  color: white;
  border-radius: 5px;
  font-size: 14px;
}

.copy-btn {
  margin-top: 12px;
  background-color: #D33A31;
  color: white;
  font-size: 14px;
  padding: 6px 12px;
  border-radius: 4px;
  width: auto !important;
  display: inline-block;
}

.action-buttons {
  margin-top: 30px;
  padding: 0 20px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.btn-edit {
  background-color: #1890ff;
  color: white;
  font-size: 16px;
  border-radius: 4px;
  padding: 10px 0;
  flex: 1;
  margin-right: 10px;
}

.btn-save {
  background-color: #52c41a;
  color: white;
  font-size: 16px;
  border-radius: 4px;
  padding: 10px 0;
  flex: 1;
  margin-left: 10px;
}

.btn-status {
  background-color: #D33A31;
  color: white;
  font-size: 16px;
  border-radius: 4px;
  padding: 10px 0;
  flex: 1;
}

.file-url {
  display: block;
  word-break: break-all;
  margin-bottom: 15px;
  font-size: 14px;
}

.file-actions {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 10px;
}

.action-btn {
  flex: 1;
  margin: 0 5px;
  font-size: 14px;
  padding: 8px 0;
  border-radius: 4px;
  color: white;
}

.btn-open {
  background-color: #1890ff;
}

.btn-download {
  background-color: #52c41a;
}

.btn-copy {
  background-color: #D33A31;
} 