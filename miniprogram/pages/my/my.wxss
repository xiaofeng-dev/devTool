.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部用户信息 */
.header {
  display: flex;
  align-items: center;
  padding: 30px 20px;
  background-color: #D33A31;
}

.avatar-wrapper {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 15px;
  border: 2px solid rgba(255, 255, 255, 0.3);
}

.avatar {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
}

.nickname {
  color: #fff;
  font-size: 18px;
  font-weight: 500;
  margin-bottom: 10px;
}

.login-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 14px;
  padding: 0 12px;
  height: 30px;
  line-height: 30px;
  border-radius: 15px;
  border: 1px solid rgba(255, 255, 255, 0.5);
  width: auto;
  display: inline-block;
}

.logout-btn {
  background-color: rgba(0, 0, 0, 0.1);
  color: #fff;
  font-size: 14px;
  padding: 0 12px;
  height: 30px;
  line-height: 30px;
  border-radius: 15px;
  border: 1px solid rgba(255, 255, 255, 0.5);
  width: auto;
  display: inline-block;
}

/* 统计数据 */
.stats-section {
  display: flex;
  background-color: #fff;
  padding: 15px 0;
  margin-bottom: 10px;
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 20px;
  font-weight: bold;
  color: #333;
  margin-bottom: 5px;
}

.stats-label {
  font-size: 14px;
  color: #999;
}

.divider {
  width: 1px;
  height: 30px;
  background-color: #eee;
  margin-top: 5px;
}

/* 菜单列表 */
.menu-list {
  background-color: #fff;
  margin-bottom: 10px;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 15px;
  border-bottom: 1px solid #f5f5f5;
}

.menu-icon {
  margin-right: 10px;
  font-size: 18px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 24px;
  height: 24px;
}

.icon {
  vertical-align: middle;
}

.menu-text {
  flex: 1;
  font-size: 16px;
  color: #333;
}

.menu-arrow {
  color: #ccc;
  font-size: 16px;
}

/* 底部 */
.footer {
  text-align: center;
  padding: 20px 0;
}

.version {
  font-size: 14px;
  color: #999;
}

.notice-bar {
  width: 94%;
  margin: 10px auto 15px;
  display: flex;
  align-items: center;
  padding: 10px 15px;
  background-color: #d9edf7;
  border: 1px solid #bce8f1;
  border-radius: 4px;
  color: #3a87ad;
}

.notice-text {
  font-size: 14px;
  margin-left: 8px;
} 