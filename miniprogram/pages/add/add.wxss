.container {
  padding-bottom: 30px;
}

.form-group {
  background-color: #fff;
  padding: 10px 0;
}

/* 上传图片区域 */
.upload-section {
  padding: 20px 0;
  display: flex;
  justify-content: center;
  background-color: #fff;
}

.upload-preview {
  width: 150px;
  height: 150px;
  border-radius: 8px;
  overflow: hidden;
  border: 1px dashed #ddd;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-preview image {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.upload-music-file {
  border: 1px dashed #ccc;
  border-radius: 8px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 8px;
  padding: 0 15px;
}

.music-file-name {
  display: flex;
  align-items: center;
  width: 100%;
  overflow: hidden;
}

.file-icon {
  margin-right: 10px;
  font-size: 24px;
}

.upload-icon {
  font-size: 28px;
  margin-bottom: 5px;
}

.upload-text {
  font-size: 14px;
}

/* 表单项目 */
.form-item {
  padding: 12px 15px;
  border-bottom: 1px solid #f5f5f5;
}

.form-label {
  margin-bottom: 8px;
  font-size: 15px;
  font-weight: 500;
  color: #333;
}

.required {
  color: #D33A31;
}

.form-input {
  width: 100%;
  height: 40px;
  font-size: 15px;
  padding: 0 4px;
  border-bottom: 1px solid #eee;
}

.form-textarea {
  width: 100%;
  height: 80px;
  font-size: 15px;
  padding: 10px;
  border: 1px solid #eee;
  border-radius: 4px;
}

/* 优先级选择 */
.priority-group {
  display: flex;
}

.priority-item {
  flex: 1;
  text-align: center;
  padding: 10px 0;
  margin: 0 5px;
  border-radius: 4px;
  border: 1px solid #ddd;
  color: #666;
  font-size: 14px;
}

.priority-item:first-child {
  margin-left: 0;
}

.priority-item:last-child {
  margin-right: 0;
}

.priority-item.active {
  background-color: #D33A31;
  border-color: #D33A31;
  color: #fff;
}

/* 按钮区域 */
.form-actions {
  padding: 20px 15px;
}

.btn-primary {
  background-color: #D33A31;
  color: #fff;
  font-size: 16px;
  font-weight: 500;
  border-radius: 8px;
} 