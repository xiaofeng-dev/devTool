/**app.wxss**/
page {
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
  background-color: #f5f5f5;
  font-size: 14px;
  color: #333;
  line-height: 1.5;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0;
  background-color: #fff;
}

/* 红色按钮 */
.btn-primary {
  background-color: #D33A31;
  color: #fff;
  border-radius: 4px;
  padding: 0 10px;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  text-align: center;
}

/* 常用边距 */
.p-10 {
  padding: 10px;
}

.p-15 {
  padding: 15px;
}

.m-10 {
  margin: 10px;
}

.m-15 {
  margin: 15px;
}

/* 文本样式 */
.text-primary {
  color: #D33A31;
}

.text-gray {
  color: #888;
}

.text-sm {
  font-size: 12px;
}

.text-md {
  font-size: 14px;
}

.text-lg {
  font-size: 16px;
}

.text-xl {
  font-size: 18px;
}

.text-bold {
  font-weight: bold;
}

/* 卡片样式 */
.card {
  margin: 10px;
  padding: 15px;
  border-radius: 8px;
  background-color: #fff;
  box-shadow: 0 1px 3px rgba(26, 26, 26, 0.1);
}

/* 列表样式 */
.list-item {
  display: flex;
  padding: 15px;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.list-item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 分隔线 */
.divider {
  height: 1px;
  background-color: #eee;
  width: 100%;
}

/* 清除浮动 */
.clearfix:after {
  content: "";
  display: block;
  clear: both;
} 
